<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Laboratorio4" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!--Primary Brand Color -->
        <item name="colorPrimary">@color/Naranja1</item>
        <item name="colorPrimaryVariant">@color/Naranja2</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!--Secondary Brand Color -->
        <item name="colorSecondary">@color/Rosa1</item>
        <item name="colorSecondaryVariant">@color/Rosa2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status Bar Color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ArteLista" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--Primary Brand Color -->
        <item name="colorPrimary">@color/Naranja1</item>
        <item name="colorPrimaryVariant">@color/Naranja2</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!--Secondary Brand Color -->
        <item name="colorSecondary">@color/Rosa1</item>
        <item name="colorSecondaryVariant">@color/Rosa2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status Bar Color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
        <style name="Theme.Overlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
        <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/Rosa1</item>
        <item name="colorPrimaryDark">@color/Rosa2</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>